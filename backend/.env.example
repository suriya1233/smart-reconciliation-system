# Backend Environment Variables
# Copy this file to .env and update with your production values

# Server Configuration
NODE_ENV=production
PORT=10000
FRONTEND_URL=https://your-frontend.onrender.com

# Database Configuration (MongoDB Atlas)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/reconciliation-system?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-random-string-min-32-characters
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/opt/render/project/src/backend/uploads

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# AWS S3 Configuration (Optional - for production file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=us-east-1

# Logging
LOG_LEVEL=warn

# Monitoring (Optional)
SENTRY_DSN=
